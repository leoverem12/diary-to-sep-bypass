{
  "manifest_version": 3,
  "name": "ЄШ — без редиректу (авто)",
  "short_name": "ЄШ Bypass",
  "version": "1.0.0",
  "description": "Автоматично визначає вашу роль (учень/вчитель) при першому вході та надалі відкриває потрібний сервіс одразу, без зайвих кліків.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://sep.eschool-ua.com/*"],
      "js": ["content_sep.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["*://diary.eschool-ua.com/*"],
      "js": ["content_bypass.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://journal.eschool-ua.com/*"],
      "js": ["content_bypass.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_diary",
        "enabled": true,
        "path": "rules_diary.json"
      },
      {
        "id": "ruleset_journal",
        "enabled": true,
        "path": "rules_journal.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://sep.eschool-ua.com/*",
    "*://diary.eschool-ua.com/*",
    "*://journal.eschool-ua.com/*"
  ]
}
