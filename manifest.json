{
  "manifest_version": 3,
  "name": "ЄШ Щоденник — без редиректу",
  "short_name": "ЄШ Bypass",
  "version": "1.0.0",
  "description": "Прибирає автоматичний редирект з diary.eschool-ua.com на sep.eschool-ua.com. Відкривайте щоденник одразу, без зайвих кліків.",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://diary.eschool-ua.com/*"],
      "js": ["content_diary.js"],
      "run_at": "document_start"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "permissions": [
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://diary.eschool-ua.com/*"
  ]
}
